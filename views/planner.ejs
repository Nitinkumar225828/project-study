      <hero class="hero">
        <div class="herocontenare">
          <div class="Boxcontener">
            <div class="titelname2">
              <h1>Smart Study Planner</h1>

            </div>
          </div>
          <div>
            <div class="container--1">
              <p class="planner-lead">Input your subjects, availability, and exams to create your optimal study
                timetable!</p>
            </div>
          </div>
        </div>
      </hero>

    </div>
    <!-- Subjects Section -->
    <div class="container">
      <section id="subjects-section" class="w-full max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6 my-6">
        <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Subjects</h2>
        <div id="subjects-list" class="space-y-2"></div>
        <button type="button" id="add-subject-btn"
          class="mt-4 px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">+ Add Subject</button>
      </section>

      <!-- Availability Section -->
      <section id="availability-section" class="w-full max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6 my-6">
        <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Study Availability</h2>
        <div id="availability-list" class="space-y-2"></div>
        <button type="button" id="add-availability-btn"
          class="mt-4 px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">+ Add
          Availability</button>
      </section>

      <!-- Generate and Reset Buttons -->
      <div class="text-center my-8">
        <button id="generate-btn"
          class="px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">Generate Timetable</button>
        <button id="reset-btn" type="button" style="display:none;"
          class="ml-4 px-6 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">Edit Inputs</button>
      </div>

      <!-- Timetable Section -->
      <section id="timetable-section" style="display:none;"
        class="w-full max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6 my-6">
        <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Your Personalized Timetable</h2>
        <div id="timetable-output" class="space-y-2"></div>
      </section>
